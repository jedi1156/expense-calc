%p#notice= notice

.reckoning
	%h2= link_to reckoning, reckoning
	%p
		%b Created at:
		= l reckoning.created_at
	%p
		= reckoning.description

	= link_to "Edit", edit_reckoning_path(reckoning)
	\|
	= link_to "Destroy", reckoning, :method => :delete, :data => { :confirm => "Are you sure?" }
	\|
	= link_to "Report", reckoning_report_path(reckoning)
	\|
	= link_to "Back", reckonings_path
.user--list
	%h4 Users in this reckoning
	%ul
		- users_in_reckoning.each do |u|
			%li
				= u
	= link_to "Invite friends", edit_reckoning_path(reckoning)
.item--list
	%h4= link_to "Items bought", reckoning_items_path(reckoning)
	= render "items/items", items: items
