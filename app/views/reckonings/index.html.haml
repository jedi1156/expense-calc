%h4
  = "Reckonings"
  %small= "(#{your_reckonings.length})"
 
- if your_reckonings.empty?
  %p Currently you are not participating in any reckonings.
- else
  %table
    %tr
      %th Name
      %th Created at
      %th Users
      %th Admin
      %th
      %th

    - your_reckonings.each do |reckoning|
      %tr
        %td= link_to reckoning, reckoning
        %td= reckoning.date_of_creation
        %td= reckoning.user_reckonings.length
        %td= reckoning.admin
        - if can? :manage, reckoning
          %td= link_to "Edit", edit_reckoning_path(reckoning), class: "btn--edit"
          %td= link_to "Remove", reckoning, :method => :delete, :data => { :confirm => "Are you sure?" }, class: "btn--destroy"

%br

- if invitations.empty?
  %p You have no invitations.
- else
  %h4
    = "You are invited to following reckonings"
    %small= "(#{invitations.length})"
  %table
    %tr
      %th Name
      %th Created at
      %th Users
      %th Admin
      %th
      %th

    - invitations.each do |inv|
      %tr
        %td= inv.name
        %td= inv.date_of_creation
        %td= inv.user_reckonings.length
        %td= inv.admin
        %td= link_to "Accept", reckoning_user_reckonings_path(inv), method: :post, class: "btn--create"
        %td= link_to "Refuse", reckoning_invitation_path(inv, current_user), method: :delete, class: "btn--destroy", data: { confirm: "Are you sure?" }

%br

= link_to new_reckoning_path, class: "btn--create" do
  %i{ class: "icon-plus icon-white" }
  %span= "New Reckoning"
