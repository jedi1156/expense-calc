- if current_user.friends.include? user
	= "Friend"
	= link_to "Unfriend", friend_path(user), method: :delete, data: { confirm: "Are you insane!? Think twice before doing that!" }, class: "btn--destroy btn-mini", hint: "Don't do this!"
- elsif fr = current_user.friend_requests_from.detect { |f| f.from_user == user }
	= "Friend request received"
	= link_to "Accept", friends_path(friend_request_id: fr.id), method: :post, class: "btn--create"
	= link_to "Refuse", friend_request_path(fr), method: :delete, data: { confirm: "You'll end up alone this way, are you sure?" }, class: "btn--destroy", hint: "Don't do this!"
- elsif fr = current_user.friend_requests_to.detect { |f| f.to_user == user }
	= "Friend request sent"
	= link_to "Resign", friend_request_path(fr), method: :delete, data: { confirm: "Are you sure you don't want to wait any more?" }, class: "btn--destroy btn-mini", hint: "Don't do this!"
- else
	= link_to "Request friends", friend_requests_path(friend_id: user.id), method: :post, class: "btn--create"
